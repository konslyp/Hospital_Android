<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_add_invite_next"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Next"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_next"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/drawable_welcome_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email Address"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/editNewInviteEmail"
                        android:background="@drawable/drawable_edit_control"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:paddingRight="10dp"
                        android:textSize="18dp"
                        android:layout_height="45dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Phone Number"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/editNewInvitePhone"
                        android:background="@drawable/drawable_edit_control"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:paddingRight="10dp"
                        android:textSize="18dp"
                        android:layout_height="45dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>
</LinearLayout>