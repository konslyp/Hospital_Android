<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:text="@string/patient_confirm_content"
                        android:background="@drawable/drawable_welcome_content"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/colorText"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnConfirmYes"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="Yes"
                            android:background="@drawable/drawable_button_circle_white"/>

                        <Button
                            android:id="@+id/btnConfirmNo"
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:text="No"
                            android:background="@drawable/drawable_button_circle_black"/>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </RelativeLayout>
</LinearLayout>